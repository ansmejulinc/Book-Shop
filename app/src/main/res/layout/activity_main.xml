<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.imac_17.myapplication.MainActivity"
    android:background="@drawable/bg26">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/button"
            android:layout_weight="1"
            android:onClick="clickSignIn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:onClick="clickSignUpMain" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:background="#96e2f5f3">

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_hight"
            android:id="@+id/imageView"
            android:src="@drawable/logo_neu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Shop"
            android:id="@+id/textView5"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColorHint="#fcfafa"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:hint="User :"
            android:inputType="text"
            android:textColorHint="#fcfafa"
            android:textColor="#ffffff"
            android:textSize="@dimen/h2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:hint="Password :"
            android:inputType="text"
            android:textColorHint="#fcfafa"
            android:textColor="#ffffff"
            android:textSize="@dimen/h2" />

    </LinearLayout>

</RelativeLayout>
